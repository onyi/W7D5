<!DOCTYPE html>
<html>
  <head>
    <title>BenchBnB</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script>
      <% if current_user %>
        window.currentUser = {
          username: "<%= current_user.username %>",
          email: "<%= current_user.email %>"
        };
      <% end %>
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
